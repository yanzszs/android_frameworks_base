<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.KeyguardSliceView
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <view
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/row"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.android.keyguard.KeyguardSliceView$Row" />
    <TextView
        android:textColor="?wallpaperTextColor"
        android:gravity="center"
        android:id="@+id/title"
        android:visibility="gone"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Keyguard.Secondary" />
    <com.android.systemui.corvus.qsweather.KGWeatherImage
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingStart="8dp"
        android:id="@+id/weather_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        />
    <com.android.systemui.corvus.qsweather.KGWeatherText
        android:textColor="?wallpaperTextColor"
        android:gravity="center"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:paddingStart="8dp"
        android:id="@+id/weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        style="@style/TextAppearance.Keyguard.Secondary"
        />   
</com.android.keyguard.KeyguardSliceView>
